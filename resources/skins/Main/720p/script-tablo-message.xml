<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
    <defaultcontrol>100</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <backgroundcolor>0xff101924</backgroundcolor>
    <controls>
        <control type="group">
            <posx>320</posx>
            <posy>0</posy>
            <animation effect="slide" start="0,0" end="-290,0" time="200" condition="IsEmpty(Window(10000).Property(script.tablo.menu.visible))">Conditional</animation>
            <control type="image">
                <posx>-320</posx>
                <posy>0</posy>
                <width>320</width>
                <height>720</height>
                <texture>script-tablo-white_square.png</texture>
                <colordiffuse>FF2F8EC0</colordiffuse>
            </control>

            <control type="label">
                <posx>0</posx>
                <posy>70</posy>
                <width>1280</width>
                <height>60</height>
                <font>font30</font>
                <textcolor>FFEBEBEB</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <label>$INFO[Window.Property(title)]</label>
            </control>

            <control type="textbox">
                <posx>210</posx>
                <posy>200</posy>
                <width>800</width>
                <height>60</height>
                <font>font20</font>
                <textcolor>FFEBEBEB</textcolor>
                <align>center</align>
                <label>$INFO[Window.Property(message)]</label>
            </control>

            <control type="button" id="100">
                <posx>-20</posx>
                <posy>-20</posy>
                <width>10</width>
                <height>10</height>
                <font>font13</font>
                <label> </label>
                <onleft>301</onleft>
                <onright>400</onright>
            </control>
        </control>
    </controls>
</window>
